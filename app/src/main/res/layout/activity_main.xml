<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/linlayMainActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/americangray"
            android:orientation="vertical"
            tools:context=".MainActivity"
            >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_edge"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etEmailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter e-mail"
            android:inputType="textPersonName"
            android:textColor="@color/cararra"
            android:textColorHint="@color/americanmorefaintgray" />

        <Button
            android:id="@+id/buRequest"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/add_button_background"
            android:onClick="buRequestEvent"
            android:text="@string/add"
            android:textColor="@color/cararra" />

    </LinearLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bu1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

            <ImageButton
                android:id="@+id/bu2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

            <ImageButton
                android:id="@+id/bu3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bu4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

            <ImageButton
                android:id="@+id/bu5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

            <ImageButton
                android:id="@+id/bu6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bu7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

            <ImageButton
                android:id="@+id/bu8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

            <ImageButton
                android:id="@+id/bu9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="2dp"
                android:background="@drawable/card_edge"
                android:onClick="buClick" />

        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/buRefresh"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/add_button_background"
        android:onClick="buClick"
        android:text="Refresh"
        android:textColor="@color/cararra"
        android:textSize="14sp" />

</LinearLayout>